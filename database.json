{
    "Database":{
        "database_file":"C:\\database.accdb",
        "Table1":"Chips",
        "Table2":"Projects",
        "Table3":"Report",
        "Table_numb":3
    },
    "Command":{
        "readIdByProject":{
            "type":"select",
            "target":{
                "Table2":{
                    "key":["ID"]
                }
            },
            "conditions":{
                "Table2":["Client","Project"]
            }
        },
        "readProjectById":{
            "type":"select",
            "target":{
                "Table2":{
                    "key":["Client","Project"]
                }
            },
            "conditions":{
                "Table2":["ID"]
            }
        },
        "readCustomerProjectsInYear":{
            "type":"select",
            "key":"DISTINCT",
            "target":{
                "Table2":{
                    "key":["Project"]
                }
            },
            "conditions":{
                "Table2":["Client","year(Start_Time)"]
            }
        },
        "readAllCustomers":{
            "type":"select",
            "key":"DISTINCT",
            "target":{
                "Table2":{
                    "key":["Client"]
                }
            }
        },
        "readRecentReportByProject":{
            "type":"select",
            "target":{
                "Table2":{
                    "key":["Client","Project"],
                    "on":"ID"
                },
                "Table3":{
                    "key":["description","solution","state","blog","OT"],
                    "on":"project_id"
                },
                "type":"inner join"
            },
            "conditions":{
                "Table2":["Client","Project"]
            },
            "no_param_cond":["datediff('ww',recent,date())=0"],
            "order_by":{
                "Table2":["Client","Project"],
                "orientation":"desc"
            }
        },
        "readRecentUpdatedReport":{
            "type":"select",
            "target":{
                "Table2":{
                    "key":["Client","Project","Type","Chip","ADK"],
                    "on":"ID"
                },
                "Table3":{
                    "key":["owner","issue_type","description","solution","state","blog","start","close","OT"],
                    "on":"project_id"
                },
                "type":"inner join"
            },
            "no_param_cond":["datediff('ww',recent,date())=0"],
            "order_by":{
                "Table2":["Client","Project"],
                "orientation":"desc"
            } 
        },
        "readReadPDTByChip":{
            "type":"select",
            "target":{
                "Table1":{
                    "key":["PDT"]
                }
            },
            "conditions":{
                "Table1":["Chip"]
            }
        },
        "readWeeklyOpenReport":{
            "type":"select",
            "target":{
                "Table2":{
                    "key":["Client","Project"],
                    "on":"ID"
                },
                "Table3":{
                    "key":["report_id","description","solution","state","blog","OT"],
                    "on":"project_id"
                },
                "type":"inner join"
            },
            "no_param_cond":["state <> 'Close' and datediff('ww',start,date())=0"],
            "order_by":{
                "Table3":["project_id"],
                "orientation":"desc"
            } 
        },
        "readAllOpenReport":{
            "type":"select",
            "target":{
                "Table2":{
                    "key":["Client","Project"],
                    "on":"ID"
                },
                "Table3":{
                    "key":["report_id","description","solution","state","blog","OT"],
                    "on":"project_id"
                },
                "type":"inner join"
            },
            "no_param_cond":["state <> 'Close'"],
            "order_by":{
                "Table3":["project_id"],
                "orientation":"desc"
            } 
        },
        "readAllPlatform":{
            "type":"select",
            "key":"DISTINCT",
            "target":{
                "Table1":{
                    "key":["Platform"]
                }
            }
        },
        "readAllPlatformChip":{
            "type":"select",
            "key":"DISTINCT",
            "target":{
                "Table1":{
                    "key":["Chip"]
                }
            },
            "conditions":{
                "Table1":["Platform"]
            }
        },
        "readCustomerProjectInfo":{
            "type":"select",
            "target":{
                "Table2":{
                    "key":["End_Client","ADK","Volume","MP","Type","Chip","Start_Time","End_Time"]
                }
            },
            "conditions":{
                "Table2":["Client","Project"]
            }
        },
        "readReadAllProjectDesignInByYear":{
            "type":"select",
            "target":{
                "Table2":{
                    "key":["Client","Project"]
                }
            },
            "conditions":{
                "Table2":["year(Start_Time)"]
            },
            "order_by":{
                "Table2":["Client"],
                "orientation":"asc"
            } 
        },
        "readReadAllProjectDesignWinByYear":{
            "type":"select",
            "target":{
                "Table2":{
                    "key":["Client","Project"]
                }
            },
            "conditions":{
                "Table2":["year(End_Time)"]
            },
            "order_by":{
                "Table2":["Client"],
                "orientation":"asc"
            } 
        },
        "readReadAllProjectDesigningByYear":{
            "type":"select",
            "target":{
                "Table2":{
                    "key":["Client","Project"]
                }
            },
            "no_param_cond":["End_Time IS NULL"],
            "order_by":{
                "Table2":["Client"],
                "orientation":"asc"
            } 
        },

        "writeReportInfo":{
            "type":"insert",
            "target":{
                "Table3":{
                    "key":["owner","project_id","issue_type","description","solution","blog","state"],
                    "now_time_key":["start","recent"]
                }
            }
        },
        "writeNewProjectInfo":{
            "type":"insert",
            "target":{
                "Table2":{
                    "key":["Client","Project","End_Client","Type","Chip","Volume","ADK","MP"],
                    "now_time_key":["Start_Time"]
                }
            }
        },
        
        "updateReportInfoById":{
            "type":"update",
            "target":{
                "Table3":{
                    "key":["solution","blog","state","OT"],
                    "now_time_key":["recent"]
                }
            },
            "conditions":{
                "Table3":["report_id"]
            }
        },
        "updateProjectInfo":{
            "type":"update",
            "target":{
                "Table2":{
                    "key":["End_Client","Chip","Volume","ADK","MP","Type"]
                }
            },
            "conditions":{
                "Table2":["Client","Project"]
            }
        },

       
        "closeReportById":{
            "type":"update",
            "target":{
                "Table3":{
                    "key":["state"],
                    "now_time_key":["close","recent"]
                }
            },
            "conditions":{
                "Table3":["report_id"]
            }
        },
        "finishProject":{
            "type":"update",
            "target":{
                "Table2":{
                    "now_time_key":["End_Time"]
                }
            },
            "conditions":{
                "Table2":["Client","Project"]
            }
        },
        
        "deleteProjectInfo":{
            "type":"delete",
            "target":"Table2",
            "conditions":{
                "Table2":["Client","Project"]
            }
        }

    }
}